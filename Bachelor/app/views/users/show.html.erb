
<div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
   
   
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title"><%= @user.fname%> <%= @user.lname%></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                 <%=image_tag "user.png", size: "100x100"%> 
                 </div>
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Email:</td>
                        <td><%= @user.email%></td>
                      </tr>
                      <tr>
                        <td>GUC ID:</td>
                        <td><%= @user.gucid%></td>
                      </tr>
                      <tr>
                        <td>Date of Birth:</td>
                        <td><%= @user.dob%></td>
                      </tr>
                   
                         <tr>
                             <tr>
                        <td>Gender:</td>
                        <td><%if @user.gender == true%> Female <%else%> Male <%end%></td>
                      </tr>
                    </tbody>
                  </table>
                    <%if @can==1%>
                   <% @post = Post.new %>
           <%= form_for @post , :url => posts_path(destid: @user.id,desttype:1)  do |ff| %>
            <div class="field">
    <%= ff.label :Post %><br />
    <%= ff.text_field :content, :style=>"height:100px; width:300px" %>
  </div>
  <br>
  <div>
        <%= ff.submit 'Post', :class=>"btn btn-success" %>
      </div>
             <br>
             <div class = "btn btn-success">
         <%= link_to "followers" ,show_followers_user_path(user_id:@user.id) %>
            </div>
          <div class = "btn btn-success" style = "margin-left: 50px;">
        <%= link_to  "followees",show_followees_user_path(user_id:@user.id) %>
        </div>
       <%end%>
     <br>
    <%else%>
      <%= button_to "Follow", {:controller => :users, :action => :follow , :user_id => @user.id}, :class=> "btn btn-success" %>
    <%end%>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>