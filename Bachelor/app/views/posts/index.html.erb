
<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>Content</th>
    <th>Created at</th>
    
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.created_at %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :method => :delete ,:confirm => 'Are you sure?'
                                     %></td>
  </tr>
  <tr><%post.comments.each do |comment|%>
  <td><%=comment.content%></td>

    
  </tr>
  <%end%>
<% end %>
</table>
 
<br />
 
<%= link_to 'New post', new_post_path %>
